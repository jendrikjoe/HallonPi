#ifndef RINGBUFFER_H_
#define RINGBUFFER_H_

template<typename T>
class RingBuffer {

public:

	RingBuffer(int size);
	void writeElementToBuffer(T input);
	T getOldestElement();
	T getNewestElement();
	~RingBuffer();

private:
	int size;
	T ringBuffer[size];
	int writerPoint;
	int readerPoint;

};




#endif
