#ifndef GPIOACCESS_H_
#define GPIOACCESS_H_

#include<string>
using namespace std;

class GPIOAccess{
public:
	GPIOAccess(string x); //opens GPIO-pin with the number x
	int export_gpio();	//exports the GPIO-pin
	int unexport_gpio(); //unexports the GPIO-pin
	int setdir_gpio(string dir); //sets the direction of the GPIO to dir
	int setval_gpio(string val); //sets the pin to val
	int getval_gpio(string &val); //gets the pin value
};




#endif /* GPIOACCESS_H_ */
